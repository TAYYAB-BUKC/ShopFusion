<div id="deleteConfirmationModal" class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTitle">Delete Confirmation</h5>
            <button type="button" class="close" @onclick="DeleteFalseCallback" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this record?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" @onclick="DeleteFalseCallback">Close</button>
        <button type="button" class="btn btn-danger" @onclick="DeleteTrueCallback">Delete</button>
      </div>
    </div>
  </div>
</div>

@code {
    [Parameter]
    public EventCallback DeleteTrueCallback { get; set; }
    [Parameter]
    public EventCallback DeleteFalseCallback { get; set; }


}
